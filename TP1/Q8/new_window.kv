#:kivy 1.11
<MainWindow>:
    nom: nom
    poids: poids
    taille: taille
    res: res
    res_img: res_img

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Label:
            text: "Calculer l'IMC"
            size_hint: 1, .4
            color: 0,0,0,1 
            font_size: "32"
            background_color: 39/255, 189/255, 245/255, .42
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        Label:
            text: "Nom: "
            color: 0,0,0,1
            size_hint: 1, .4
        TextInput:
            id: nom
            multiline: False
            size_hint: 1, .4
        Label:
            text: "Poids: (en kg)"
            color: 0,0,0,1
            size_hint: 1, .4
        TextInput:
            id: poids
            multiline: False
            size_hint: 1, .4
        Label:
            text: "Taille: (en m)"
            color: 0,0,0,1
            size_hint: 1, .4
        TextInput:
            id: taille
            multiline: False
            size_hint: 1, .4
        
        Button:
            text: "Envoyer"
            size_hint: 1, .3
            on_press: 
                root.get_imc()
        Label:
            id: res
            color: 0,0,0,1
            size: self.texture_size
            text: ""
        Image:
            id: res_img
            source: ""
