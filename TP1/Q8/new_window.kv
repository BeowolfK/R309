#:kivy 1.11
<MainWindow>:
    nom: nom
    age: age
    poids: poids
    taille: taille
    name: "main"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Label:
            text: "Calculer l'IMC"
            size_hint: 1, .4
            color: 0,0,0,1 
            font_size: "32"
            background_color: 39/255, 189/255, 245/255, .42
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        Label:
            text: "Nom: "
            color: 0,0,0,1
            size_hint: 1, .4
        TextInput:
            id: nom
            multiline: False
            size_hint: 1, .4
        Label:
            text: "Age: "
            color: 0,0,0,1
            size_hint: 1, .4
        TextInput:
            id: age
            multiline: False
            size_hint: 1, .4
        Label:
            text: "Poids: "
            color: 0,0,0,1
            size_hint: 1, .4
        TextInput:
            id: poids
            multiline: False
            size_hint: 1, .4
        Label:
            text: "Taille: "
            color: 0,0,0,1
            size_hint: 1, .4
        TextInput:
            id: taille
            multiline: False
            size_hint: 1, .4
        
        Button:
            text: "Envoyer"
            size_hint: 1, .3
            on_press: 
                root.submit()

<MaigreWindow>:
    name: "maigre"
    background_color: 0, 255, 0, 0

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Label:
            text: "Vous êtes maigre !"
            font_size: "32"
            size_hint: 1, .4
            color: 0,0,0,1 
        Image:
            source: "../assets/maigre.png"
            size_hint: 1, .5
            allow_stretch: True
            keep_ratio: False
        Button:
            text: "Go Back"
            size_hint: 1, .4
            on_press: 
                app.root.current = "main"
                root.manager.transition.direction = "down"

